@model IEnumerable<PRODUCTOS_COTEMAR.Models.ProductViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_MaterPageProducts.cshtml";
}

<div class="container">
    <h3 id="texto2">Lista de productos</h3>
    <div id="buttonadd">
        <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Create" , "Products")'" title="Agregar nuevo producto">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z"></path>
            </svg>
            <span class="add" data-target="Agrega nuevo producto">Agregar</span>
        </button>
    </div>
</div>
<div class="container" id="divcontainertable">
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Clave</th>
                <th>Nombre de producto</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.id)</td>
                <td>@Html.DisplayFor(modelItem => item.name)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
            }
            
        </tbody>
    </table>
</div>
